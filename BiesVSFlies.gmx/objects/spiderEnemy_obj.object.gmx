            <string>sprite_index = spr_spiderEnemy;


if (place_meeting(x,y,purpleShot_obj))
{
    player = 1;
    live -= 1;
    injured = true;
    
    sprite_index = spr_spiderInjured;
    
}else if(place_meeting(x,y,yellowShot_obj))
{
    player = 2;
    live -= 1;
    injured = true;
    sprite_index = spr_spiderInjured;
    
}else if(place_meeting(x,y,player1_obj))
{
    player1_obj.injured=true;
    player1_obj.live -= hurt;

}else if(place_meeting(x,y,player2_obj))
{
    player2_obj.injured=true;
    player2_obj.live -= hurt;
}else{
    injured = false;
    
}

// COLISIONES

// Colision vertical contra ground_obj
// si a la siguiente iteraci√≥n toca al suelo


//x+sign(horizontal_speed)*sprite_width

hsp = movespeed * dir;
vsp += grav;

// Colision horizontal
if(place_meeting(x+hsp,y,ground_obj))
{
    // recorrer uno a uno los pixeles de bajada para no pasarse
    while(!place_meeting(x+sign(hsp),y,ground_obj))
    {
        x += sign(hsp);
    }
    
    hsp = 0;
    dir *= -1;
    image_xscale = (-1)*dir;

}

x+=hsp;

// Vertical
if(place_meeting(x,y+vsp,ground_obj))
{
    // recorrer uno a uno los pixeles de bajada para no pasarse
    while(!place_meeting(x,y+sign(vsp),ground_obj))
    {
        y += sign(vsp);
    }
    
    vsp = 0;
   
    if(path &amp;&amp; !position_meeting(x+30*dir,y+(sprite_height/2)+8,ground_obj))
    {
        image_xscale = dir;
        dir *= -1;
    }
    
}

y+=vsp;


 


// DIE

if(live &lt;=0)
{
    
    died = true;
     if image_alpha &gt; 0 image_alpha -= 0.01;
     
     if(image_alpha == 0){
     
         if(player == 1)
        {
            global.player1_coins += coins;
            global.player1_totalcoins += coins;
        }else {
            global.player2_coins += coins;
            global.player2_totalcoins += coins;
        }
        
        instance_destroy();
        
     }
}
